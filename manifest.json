{
  "manifest_version": 2,

  "name": "LeetCode Difficulty Hider",
  "description": "Hides difficulty on LeetCode problems.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "content_scripts": [{
    "css": ["style.css"],
    "js": ["script.js"],
    "matches": ["https://leetcode.com/*"]
  }]
}
